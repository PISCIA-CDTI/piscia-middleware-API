{
  "name": "piscia-middleware-api",
  "version": "0.0.1",
  "description": "A water-middleware to inject water devices",
  "author": "Aitor Corchero Rodriguez",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:jest-e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e": "cucumber-js -p default",
    "test:e2e:cov": "nyc --reporter=lcov npm run test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^7.3.1",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.3.1",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.3.1",
    "@nestjs/platform-ws": "^7.3.1",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/websockets": "^7.3.1",
    "@types/ws": "^7.2.6",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "bl": "^4.0.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "coap": "^0.23.1",
    "csv-parser": "^2.3.3",
    "fs-extra": "^9.0.1",
    "ftp": "^0.3.10",
    "glob": "^7.1.6",
    "helmet": "^3.22.0",
    "moment": "^2.27.0",
    "mongoose": "^5.9.15",
    "msgpack5": "^4.2.1",
    "node-json2html": "^1.4.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "sparql-http-client": "^2.2.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.3.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "26.0.3",
    "@types/node": "^13.13.12",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/socket.io": "^2.1.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.1-alpha.2",
    "@typescript-eslint/parser": "^2.34.1-alpha.2",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "cucumber-pretty": "^1.5.2",
    "cucumber-tsflow": "^3.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.6.1",
    "nyc": "^15.0.1",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
